<%- include('header', {pageTitle: 'Játékosszerkesztő'}) -%>


<div class="container">
    <div class="row">
        <div class="cl-12">
            <h3>Kérjük adja meg a játékos adatait!</h3>
            <form method="post">
                <div class="form-group">
                    <label for="nev">Név</label>
                    <input type="text" required class="form-control" id="nev" name="nev" value="<%=(typeof jatekos === 'undefined') ? '' : jatekos.nev%>">
                </div>
                <div class="form-group">
                    <label for="szuletesiDatum">Születési dátum</label>
                    <input type="date" required class="form-control" id="szuletesiDatum" name="szulDatum" value="<%=(typeof jatekos === 'undefined') ? '' : moment(jatekos.szulDatum).format('YYYY-MM-DD')%>">
                </div>
                <div class="form-group">
                    <label for="mezSzam">Mezszám</label>
                    <input type="number" required class="form-control" id="mezSzam" name="mezszam" value="<%=(typeof jatekos === 'undefined') ? '' : jatekos.mezszam%>">
                </div>
                <input type="submit" class="btn btn-sm btn-dark" value="Ment">
            </form>
        </div>
    </div>
</div>


<%- include('footer') -%>

